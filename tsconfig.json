{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["src/**/*", "tools/**/*"],
  "exclude": ["node_modules", "dist", "build", "src/tests/**/*", "src/dashboard/client/__tests__/**/*", "**/*.test.ts", "**/*.test.tsx"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
