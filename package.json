{
  "name": "tgnoti",
  "version": "1.0.0",
  "description": "A notification bridge between Twitter and Telegram",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "predev": "(pkill -f 'node --loader ts-node/esm' || true) && (pkill -f 'nodemon.*src/index.ts' || true) && rm -f telegram-bot.lock",
    "dev": "NODE_NO_WARNINGS=1 nodemon --watch 'src/**/*.ts' --exec 'node --loader ts-node/esm' src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rm -rf build",
    "prebuild": "npm run clean",
    "test": "jest",
    "dashboard": "NODE_NO_WARNINGS=1 tsx tools/show-dashboard.ts",
    "log-viewer": "NODE_NO_WARNINGS=1 SHOW_DASHBOARD=true nodemon --watch 'src/**/*.ts' --exec 'node --loader ts-node/esm' src/index.ts",
    "tweet-analysis": "NODE_NO_WARNINGS=1 tsx tools/run-tweet-analysis.ts"
  },
  "keywords": [
    "twitter",
    "telegram",
    "notifications",
    "bot"
  ],
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@types/node-telegram-bot-api": "^0.64.7",
    "axios": "^1.8.2",
    "canvas": "^3.1.0",
    "chalk": "^5.4.1",
    "chart.js": "^3.9.1",
    "chartjs-node-canvas": "^4.1.6",
    "dotenv": "^16.4.7",
    "inversify": "^6.2.2",
    "mongodb": "^6.13.1",
    "node-telegram-bot-api": "^0.64.0",
    "reflect-metadata": "^0.2.2",
    "rettiwt-api": "https://github.com/Rishikant181/Rettiwt-API.git#dev"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "moment": "^2.30.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "axios": "^1.8.2",
    "tough-cookie": "^4.1.3"
  }
}
